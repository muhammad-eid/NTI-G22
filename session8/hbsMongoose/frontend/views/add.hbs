    <form action="/getAddLogic"> 
        {{!-- get --}}
        <div class="mb-3">
            <input name="name" placeholder="please enter your name" class="form-control" value="{{userData.name}}">
            {{#if e.errors.name}}
            <div class="alert alert-danger">{{e.errors.name}}</div>
            {{/if}}
        </div>
